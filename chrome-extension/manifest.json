{
    "manifest_version": 3,
    "name": "GitSense",
    "version": "1.0",
    "description": "Track GitHub repo activity",
    "permissions": [
        "storage",
        "identity",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "https://gitsense-ooly.onrender.com/*",
        "https://github.com/*",
        "http://localhost:8080/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}